<section class="py-30 px-6">
  <div class="max-w-[1200px] mx-auto">
    <div class="text-center mb-16">
      <div class="text-acc-green text-sm font-bold tracking-[0.15em] uppercase mb-4">Tecnologías</div>
      <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight mb-6">
        Herramientas que <span class="text-acc-green">domino</span>
