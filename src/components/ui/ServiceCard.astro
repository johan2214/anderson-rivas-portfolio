---
export interface Props {
  title: string;
  description: string;
  features: string[];
}

const { title, description, features } = Astro.props;
---

<div class="bg-card-bg border border-card-border p-10 rounded-2xl hover:border-acc-green hover:-translate-y-2 hover:shadow-[0_20px_40px_rgba(57,255,20,0.1)] transition-all duration-300 h-full flex flex-col">
  <div class="w-16 h-16 bg-acc-green-dim rounded-2xl flex items-center justify-center mb-6 text-acc-green">
    <slot name="icon" />
  </div>
  <h3 class="text-xl font-bold mb-4 text-white">{title}</h3>
  <p class="text-text-gray mb-5 leading-relaxed flex-grow">{description}</p>
  <ul class="space-y-2">
    {features.map(feature => (
      <li class="text-text-gray text-sm flex items-center gap-2">âœ“ {feature}</li>
    ))}
  </ul>
</div>